doctype html
html(lang="fr")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Nino
    link(rel="icon" type="image/png" href="/images/small_logo75.png")
    link(rel="stylesheet" href="/css/all.min.css")
    link(rel="stylesheet" href="/css/style.css")
    link(rel="stylesheet" href="/css/nino/menu-player.css")
    link(rel="stylesheet" href="/css/nino/video-bloc.css")
    script(src="/javascripts/jquery.js") 
